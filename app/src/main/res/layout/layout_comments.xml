<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_android"
        android:id="@+id/commentProfileImage"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="0.5dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    
    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/relLayout1"
        android:layout_toRightOf="@id/commentProfileImage"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="lakshay994"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/commentUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/commentMainComment"
                android:text="A Comment"
                android:layout_toRightOf="@+id/commentUsername"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commentTimeStamp"
                android:text="4d"
                android:layout_below="@+id/commentMainComment"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commentLike"
                android:text="Like"
                android:layout_below="@+id/commentMainComment"
                android:layout_toRightOf="@+id/commentTimeStamp"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commentReply"
                android:text="Reply"
                android:layout_below="@+id/commentMainComment"
                android:layout_toRightOf="@+id/commentLike"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:src="@drawable/ic_heart_outlione"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/commentHeart"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </RelativeLayout>

</RelativeLayout>