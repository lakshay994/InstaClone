<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_android"
        android:id="@+id/searchProfilePhoto"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="0.5dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/relLayout1"
        android:layout_toRightOf="@id/searchProfilePhoto"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="lakshay994"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/searchUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/searchEmail"
                android:text="lakshay@gmail.com"
                android:layout_below="@+id/searchUsername"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>